<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_layout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_layout_title"
            android:divider="@drawable/card_divider"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:showDividers="middle">

            <TextView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:background="@drawable/card_bg"
                android:padding="10dp"
                android:text="卡片1"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:background="@drawable/card_bg"
                android:padding="10dp"
                android:text="卡片1"
                android:textColor="@color/white" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/home_layout_title"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/profile_img"></ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/home_title"
                android:layout_below="@+id/home_title"
                android:letterSpacing="0.2"
                android:text="Hi! Zhanglh"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_layout_card"
            android:padding="30dp">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/item_card_bg"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pangmenzhengdao_title_black"
                    android:text="最近在听"
                    android:textColor="#89A0C8"
                    android:textSize="18sp"
                    />


            </RelativeLayout>

        </LinearLayout>




    </RelativeLayout>


</ScrollView>