<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bottom_bg"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/main_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_iv_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_home" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_iv_search"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_search" />

            <TextView
                android:id="@+id/text_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_study_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_iv_study_card"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_study_card" />

            <TextView
                android:id="@+id/text_study_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Study Card" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_iv_center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_center" />

            <TextView
                android:id="@+id/text_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Center" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>